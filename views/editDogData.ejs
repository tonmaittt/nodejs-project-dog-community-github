<%- include('partials/heads') -%>
	<%- include('partials/headers') -%>

		<body>
			<!-- breadcrumb-section -->
			<div class="breadcrumb-section hero-edit-profile">
				<div class="container">
					<div class="row">
						<div class="col-lg-8 offset-lg-2 text-center">
							<div class="breadcrumb-text">
								<p>ยินดีต้อนรับ</p>
								<h1>แก้ไขข้อมูลสุนัข</h1>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- end breadcrumb section -->

			<!-- check out section -->
			<div class="checkout-section mt-150 mb-150">
				<div class="container">
					<div class="row">
						<div class="col-lg-8">
							<div class="checkout-accordion-wrap">
								<div class="accordion" id="accordionExample">
								
									<div class="card single-accordion">
										<div class="card-header" id="headingOne">
											<h5 class="mb-0">
												<button class="btn btn-link" type="button" data-toggle="collapse"
													data-target="#collapseOne" aria-expanded="true"
													aria-controls="collapseOne">
													ข้อมูลสุนัข
												</button>
											</h5>
										</div>
										
										<div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
											data-parent="#accordionExample">
											<div class="card-body">
												<div class="billing-address-form">
													<form action="/editDogDataSubmit" method="post">
														<% if (messages.success) { %>
															<div class="alert alert-success" role="alert"><%= messages.success %></div>
														  <% } %>
														  <% if (messages.error) { %>
															<div class="alert alert-danger" role="alert"><%= messages.error %></div>
														  <% } %>
														
														
														<label for="dogName">ชื่อสุนัข :</label>
															<p><input type="text" placeholder="Dog Name" id="dogName" name="dogName" value="<%= dogName %>" required></p>
														<label for="dogBreed">พันธุ์ของสุนัข :</label>
															<p><input type="text" placeholder="Dog breed" id="dogBreed" name="dogBreed" value="<%= dogBreed %>" required></p>
														<label for="dogBirthday">วันเกิด :</label>
															<% if(dogBirthday === null){ %>
															<p><input type="date" placeholder="Birthday" id="dogBirthday" name="dogBirthday" value="" required></p>
															<% } else{ %>
															<p><input type="date" placeholder="Birthday" id="dogBirthday" name="dogBirthday" value="<%= new Intl.DateTimeFormat('en-CA').format(dogBirthday) %>" required></p>
															<% } %>
														<label for="dogGender">เพศ :</label>
														<p>
															<select class="custom-select mr-sm-2" id="dogGender" name="dogGender" required>
																<option value="<%= dogGender %>" selected><% if(dogGender === null){ %> โปรดเลือก <% } else{ %> <%= dogGenderName %> <% }%></option>
																<option value="1">ชาย</option>
																<option value="2">หญิง</option>
																<option value="3">ไม่ระบุ</option>
															</select>
														</p>
														
														<label for="dogIntroduce">แนะนำตัวสุนัข :</label>
														  <p><textarea name="dogIntroduce" id="dogIntroduce" cols="30" rows="10" placeholder="dogIntroduce"><%= dogIntroduce %></textarea></p>

														
														<button type="submit" class="btn btn-dark btn-lg btn-block" style="color: #ffffff; background-color: coral;">ยืนยัน</button>
														<input type="button" class="btn btn-dark btn-lg btn-block" style="color: #ffffff; background-color: coral;" onclick="history.back();" value="ยกเลิก">
													</form>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<%- include('partials/manuEdit') -%>
					</div>
				</div>
			</div>
			<!-- end check out section -->

			<script>
				var loadFile = function (event) {
					var output = document.getElementById('output');
					output.src = URL.createObjectURL(event.target.files[0]);
					output.onload = function () {
						URL.revokeObjectURL(output.src) // free memory
					}
				};
			</script>

			<%- include('partials/footers') -%>

		</body>

		</html>