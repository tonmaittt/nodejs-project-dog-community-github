<%- include('partials/heads') -%>
    <%- include('partials/headers') -%>

        <body>
            <!--PreLoader-->
            <div class="loader">
                <div class="loader-inner">
                    <div class="circle"></div>
                </div>
            </div>
            <!--PreLoader Ends-->

            <!-- breadcrumb-section -->
            <div class="breadcrumb-section breadcrumb-bg hero-bg-dt">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2 text-center">
                            <div class="breadcrumb-text">
                                <p class="subtitle">LOVE DOGS TH</p>
                                <h1>รายละเอียดสินค้าและบริการ</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end breadcrumb section -->
            <main class="board mt-4">
                <% if (messages.error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= messages.error %>
                    </div>
                    <% } %>
                        <div class="container">
                            <div class="shadow p-3 mb-5 pb-5 bg-white rounded">
                                <div class="text-with-lines d-flex justify-content-center">
                                    <div class="text-top">
                                        <div class="title mt-2">
                                            <h3>โพสต์รายละเอียดสินค้าและบริการ</h3>
                                        </div>
                                    </div>
                                </div>
                                <hr width="100%">
                                <div class="container">
                                    <!-- Control the column width, and how they should appear on different devices -->
                                    <div class="row">
                                        <div class="col-sm-3 mx-auto">
                                            <button type="button"
                                                class="btn btn-warning col-sm-12 mt-2" style="color: #ffffff; background-color: coral;">ประวัติการโพสต์</button>

                                        </div>
                                        <div class="col-sm-9 mx-auto mt-auto">
                                            <div class="container">
                                                <form action="/shopDetailAdd" method="post" enctype="multipart/form-data">
                                                    <div class="form-group">
                                                        <label for="titleboard">หัวข้อ</label>
                                                        <input type="text" class="form-control" id="titleboard"
                                                            name="titleboard" value="" required>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="image">รูปภาพประกอบ</label><br>
                                                        <input type="file" accept="image/*" onchange="loadFile(event)" name="photo" required>
                                                        <img id="output" class="col-lg-5 mt-4 mx-auto" />
                                                    </div>

                                                    <p>รายละเอียด</p>

                                                    <div id="quill_editor">
                                                        <div id="myText"></div>
                                                    </div>
                                                    <input type="hidden" id="quill_html" name="details"></input>
                                                    <br>
                                                    <button type="submit" class="btn btn-warning btn-lg btn-block" style="color: #ffffff; background-color: coral;">ยืนยัน</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                        </div>
            </main>

            <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
        <!-- Include the Quill library -->
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>    
        </body>
        <script>
            var textToStore = '';
            var myTextElement = document.getElementById("myText");
            myTextElement.innerHTML = textToStore;
            var quill = new Quill('#quill_editor', {
                theme: 'snow'
            });

            quill.on('text-change', function (delta, oldDelta, source) {
                document.getElementById("quill_html").value = quill.root.innerHTML;
            });
        </script>
        <script>
            var loadFile = function (event) {
                var output = document.getElementById('output');
                output.src = URL.createObjectURL(event.target.files[0]);
                output.onload = function () {
                    URL.revokeObjectURL(output.src) // free memory
                }
            };
        </script>

<%- include('partials/footers') -%>