<%- include('partials/heads') -%>
	<%- include('partials/headers') -%>

		<body>
			<!-- breadcrumb-section -->
			<div class="breadcrumb-section breadcrumb-bg">
				<div class="container">
					<div class="row">
						<div class="col-lg-8 offset-lg-2 text-center">
							<div class="breadcrumb-text">
								<p>ยินดีต้อนรับ</p>
								<h1>เพิ่มข้อมูลผู้เชี่ยวชาญ</h1>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- end breadcrumb section -->

			<!-- check out section -->
			<div class="checkout-section mt-150 mb-150">
				<div class="container">
					<div class="row">
						<div class="col-lg-8">
							<div class="checkout-accordion-wrap">
								<div class="accordion" id="accordionExample">
								
									<div class="card single-accordion">
										<div class="card-header" id="headingOne">
											<h5 class="mb-0">
												<button class="btn btn-link" type="button" data-toggle="collapse"
													data-target="#collapseOne" aria-expanded="true"
													aria-controls="collapseOne">
													ข้อมูลผู้เชี่ยวชาญ
												</button>
											</h5>
										</div>
										
										<div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
											data-parent="#accordionExample">
											<div class="card-body">
												<div class="billing-address-form">
													<form action="/editUserVetsDataSubmit" method="post">
														<% if (messages.success) { %>
															<div class="alert alert-success" role="alert"><%= messages.success %></div>
														  <% } %>
														  <% if (messages.error) { %>
															<div class="alert alert-danger" role="alert"><%= messages.error %></div>
														  <% } %>
														  <label for="vetsTitle">คำนำหน้า :</label>
														  <p><input type="text" placeholder="Title" id="vetsTitle" name="vetsTitle" value="<%= vetsTitle %>" required></p>
														  <label for="vetsFname">ชื่อ :</label>
														  <p><input type="text" placeholder="Name" id="vetsFname" name="vetsFname" value="<%= vetsFname %>" required></p>
														  <label for="vetsSname">นามสกุล :</label>
														  <p><input type="text" placeholder="Last Name" id="vetsSname" name="vetsSname" value="<%= vetsSname %>" required></p>
														  <label for="vetsEmail">อีเมล์ :</label>
														  <p><input type="email" placeholder="Email" id="vetsEmail" name="vetsEmail" value="<%= vetsEmail %>" required></p>
														  <label for="vetsNameShow">ชื่อที่ใช้แสดง :</label>
														  <p><input type="text" placeholder="Show Name" id="vetsNameShow" name="vetsNameShow" value="<%= vetsNameShow %>" required></p>
														  <label for="vetsGender">เพศ :</label>
															<p>
																<select class="custom-select mr-sm-2" id="vetsGender" name="vetsGender" required>
																	<option value="<%= vetsGender %>"><%= vetsGenderName %></option>
																	<option value="1">ชาย</option>
																	<option value="2">หญิง</option>
																	<option value="3">ไม่ระบุ</option>
																</select>
															</p>
														   <label for="vetsBirthday">วันเกิด :</label>
															<p><input type="date" placeholder="Birthday" id="vetsBirthday" name="vetsBirthday" value="<%= new Intl.DateTimeFormat('en-CA').format(vetsBirthday) %>" required></p>
														  <label for="vetsAddress">ที่อยู่ :</label>
														   <p><textarea name="vetsAddress" id="vetsAddress" cols="30" rows="10" placeholder="Address" required><%= vetsAddress %></textarea></p>
														
														  <label for="vetsTel">เบอร์โทรศัพท์ :</label>
														   <p><input type="tel" placeholder="tel." id="vetsTel" name="vetsTel" value="<%= vetsTel %>" minlength="10" maxlength="10" required></p>
														  <label for="vetsFacebook">FaceBook :</label>
														  <p><input type="text" placeholder="FaceBook" id="vetsFacebook" name="vetsFacebook" value="<%= vetsFacebook %>" required></p>
														  <label for="vetsLine">Line :</label>
														  <p><input type="text" placeholder="Line" id="vetsLine" name="vetsLine" value="<%= vetsLine %>" required></p>
														  <label for="vetsWorkplace">คลีนิคที่ทำงาน :</label>
														  <p><input type="text" placeholder="Workplace" id="vetsWorkplace" name="vetsWorkplace" value="<%= vetsWorkplace %>" required></p>
														  <label for="vetsPosition">ตำแหน่งงาน :</label>
														  <p><input type="text" placeholder="Position" id="vetsPosition" name="vetsPosition" value="<%= vetsPosition %>" required></p>
														  <label for="vetsGraduated">เรียนจบจาก :</label>
														  <p><input type="text" placeholder="Position" id="vetsGraduated" name="vetsGraduated" value="<%= vetsGraduated %>" required></p>
														  <label for="vetsIntroduce">แนะนำตัว :</label>
														  <p><textarea name="vetsIntroduce" id="vetsIntroduce" cols="30" rows="10" placeholder="Introduce" required><%= vetsIntroduce %></textarea></p>


														<button type="submit" class="btn btn-dark btn-lg btn-block" style="color: #ffffff; background-color: coral;">ยืนยัน</button>
														<input type="button" class="btn btn-dark btn-lg btn-block" style="color: #ffffff; background-color: coral;" onclick="history.back();" value="ยกเลิก">
													</form>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<%- include('partials/manuEdit') -%>
					</div>
				</div>
			</div>
			<!-- end check out section -->

			<script>
				var loadFile = function (event) {
					var output = document.getElementById('output');
					output.src = URL.createObjectURL(event.target.files[0]);
					output.onload = function () {
						URL.revokeObjectURL(output.src) // free memory
					}
				};
			</script>

			<%- include('partials/footers') -%>

		</body>

		</html>